        <activity
            android:name="it.futura.generalradioplayer.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="it.futura.generalradioplayer.MainActivity2"
            android:label="@string/title_activity_main_activity2" >
        </activity>
        <activity
            android:name="it.futura.generalradioplayer.RadioActivity"
            android:label="@string/title_activity_radio" >
